<Window x:Class="MaterialForms.Demo.DynamicFormDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:MaterialForms.Wpf.Controls;assembly=MaterialForms"
        mc:Ignorable="d"
        FontSize="18"
        Title="DynamicFormDemo" Height="300" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" x:Name="ModelsList"></ListBox>
        <controls:DynamicForm Grid.Column="1" Margin="16" Model="{Binding SelectedItem, ElementName=ModelsList}" />
    </Grid>
</Window>
